{
	"root": true,
	"extends": ["@react-native", "plugin:import/recommended", "prettier"],
	"plugins": ["import"],
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"node": true
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"]
			}
		}
	},
	"rules": {
		"import/order": [
			"warn",
			{
				"groups": [["builtin", "external"], ["internal", "parent", "sibling", "index"]],
				"newlines-between": "always"
			}
		],
		"no-console": ["warn", { "allow": ["warn", "error"] }]
	}
}